---
import Layout from "../layouts/Layout.astro";
import Slide from "../components/Slide.astro";
---

<Layout title="Algoup">
	<main>
		<div class="slide-container w-full h-screen">
			<Slide
				center="items-center"
				bgColor="bg-slate-700"
				bgImage="bg-[url('/agv-home-1.jpg')]"
				text="Powerful and Intelligent Solutions">
				<div class="text-orange-300 text-5xl font-bold max-w-2xl">
					Empowering Technology with End to End Solutions
				</div>
			</Slide>

			<div class="bg-zinc-800 w-full h-screen pt-10">
				<div
					class="text-white text-5xl font-bold text-center w-full animate-slidein300 mb-5">
					Product Center
				</div>
				<div class="text-center text-gray-300 text-xl">
					Redifining autonomous vehicles developed with meticulous
					research and technology.
				</div>
			</div>
		</div>
	</main>
</Layout>

