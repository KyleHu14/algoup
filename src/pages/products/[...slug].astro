					</div>
				</div>
			</div>

			<!-- Parameters -->
			<div
				class="h-[80vh] flex flex-col gap-5 justify-center items-center">
				<div class="text-center font-bold text-5xl">Parameters</div>
				<div class="flex justify-center items-center gap-10">
					<ParameterList />
					<img src="/amr.png" />
					<ParameterList />
				</div>
			</div>
		</div>
	</main>
</Layout>
