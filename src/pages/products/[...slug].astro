				</div>

				<!-- Product Image -->
				<img src="/amr.png" />
			</div>

			<!-- Advantages -->
			<div
				class="h-[80vh] flex flex-col gap-20 justify-center items-center">
				<div class="text-center font-bold text-5xl">
					Product Advantages
				</div>

				<div class="flex justify-center">
					<img src="/amr.png" />
					<div class="grid grid-cols-[15rem_15rem]">
						<div
							class="mr-[-1px] mb-[-1px] flex items-center justify-center border font-bold">
